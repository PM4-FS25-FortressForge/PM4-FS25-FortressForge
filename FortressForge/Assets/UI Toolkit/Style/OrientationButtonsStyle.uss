.orientation-grid-root {
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.orientation-row {
    flex-direction: row;
    justify-content: center;
}

.orientation-arrow {
    width: 50px;
    height: 50px;
    margin: 4px;
    color: var(--red);
    -unity-font-style: bold;
    font-size: 30px;
}

.orientation-placeholder {
    width: 40px;
    height: 40px;
}